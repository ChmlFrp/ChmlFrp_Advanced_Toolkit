<Page x:Class="ChmlFrp_Professional_Launcher.Pages.ChmlFrpLoginPages.TMAPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="430"
      d:DesignWidth="620">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Border Margin="5"
                    Background="#f9f9f9"
                    Opacity="0.8"
                    CornerRadius="10">
                <Grid>
                    <TextBlock FontSize="20"
                            FontWeight="Bold"
                            Text="隧道列表"
                            Margin="15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center" />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">

                        <Button Margin="0,0,5,0"
                                BorderBrush="{DynamicResource ThemeColor}"
                                Style="{StaticResource IconButtonsStyletwo}"
                                Content="{DynamicResource add}"
                                Width="40" Height="40"
                                Click="btnAdd_Click" />

                        <Button Margin="0,0,25,0"
                                BorderBrush="{DynamicResource ThemeColor}"
                                Style="{StaticResource IconButtonsStyletwo}"
                                Content="{DynamicResource refresh}"
                                Width="40" Height="40"
                                Click="btnRefresh_Click" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Margin="2" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid x:Name="TunnelGridOne"
                  Grid.Row="0" Grid.Column="0">
                <Border Margin="2" Opacity="0.8" Background="{DynamicResource WhiteColorLiglt}" CornerRadius="6">

                </Border>
            </Grid>

            <Grid x:Name="TunnelGridTwo"
                  Grid.Row="0" Grid.Column="1" >
                <Border Margin="2" Opacity="0.8" Background="{DynamicResource WhiteColorLiglt}" CornerRadius="6">

                </Border>
            </Grid>

            <Grid x:Name="TunnelGridThree"
                  Grid.Row="1" Grid.Column="0" >
                <Border Margin="2" Opacity="0.8" Background="{DynamicResource WhiteColorLiglt}" CornerRadius="6">

                </Border>
            </Grid>

            <Grid x:Name="TunnelGridFour"
                  Grid.Row="1" Grid.Column="1" >
                <Border Margin="2" Opacity="0.8" Background="{DynamicResource WhiteColorLiglt}" CornerRadius="6">

                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
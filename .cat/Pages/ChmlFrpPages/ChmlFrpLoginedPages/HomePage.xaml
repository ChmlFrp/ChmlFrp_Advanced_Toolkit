<Page x:Class="CPL.Pages.ChmlFrpPages.ChmlFrpLoginedPages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:styles="clr-namespace:CPL.Styles">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="FontFamily" Value="Microsoft YaHei" />
        </Style>
    </Page.Resources>

    <Border Background="{DynamicResource WhiteColorLight}" CornerRadius="6" Opacity="0.8" Padding="5" Margin="5"
            VerticalAlignment="Top">
        <Grid>
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="5,5,0,0">

                <TextBlock VerticalAlignment="Top"
                           FontSize="15"
                           FontWeight="Bold"
                           HorizontalAlignment="Left"
                           Margin="10"
                           Text="账户详情" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                    <StackPanel HorizontalAlignment="Left" Orientation="Vertical" Margin="5,0,0,0">

                        <TextBlock Text="邮箱" />

                        <Border CornerRadius="2,2,2,2"
                                Background="{DynamicResource ThemeColor}"
                                Width="120"
                                Opacity="0.8"
                                Height="4" />

                        <TextBlock x:Name="Usermailbox"
                                   FontSize="12"
                                   Text="我是擎天柱" />
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center" Orientation="Vertical" Margin="15,0,0,0">
                        <TextBlock Text="注册时间" />

                        <Border CornerRadius="2,2,2,2"
                                Background="{DynamicResource ThemeColor}"
                                Opacity="0.8"
                                Width="120"
                                Height="4" />

                        <TextBlock x:Name="UserRegistrationTime"
                                   Text="我是擎天柱" />
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Right" Orientation="Vertical" Margin="15,0,0,0">
                        <TextBlock Text="QQ" />
                        <Border CornerRadius="2,2,2,2"
                                Background="{DynamicResource ThemeColor}"
                                Opacity="0.8"
                                Width="120"
                                Height="4" />
                        <TextBlock x:Name="UserQq"
                                   Text="我是擎天柱" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Center">

                    <StackPanel HorizontalAlignment="Left" Orientation="Vertical" Margin="5,0,0,0">

                        <TextBlock Text="权限组" />

                        <Border CornerRadius="2,2,2,2"
                                Background="{DynamicResource ThemeColor}"
                                Opacity="0.8"
                                Width="120"
                                Height="4" />

                        <TextBlock x:Name="Userright"
                                   Text="我是擎天柱" />
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center" Orientation="Vertical" Margin="15,0,0,0">
                        <TextBlock Text="到期时间" />

                        <Border CornerRadius="2,2,2,2"
                                Background="{DynamicResource ThemeColor}"
                                Opacity="0.8"
                                Width="120"
                                Height="4" />

                        <TextBlock x:Name="UserExpirationTime"
                                   Text="我是擎天柱" />
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Right" Orientation="Vertical" Margin="15,0,0,0">
                        <TextBlock Text="实名状态" />
                        <Border CornerRadius="2,2,2,2"
                                Background="{DynamicResource ThemeColor}"
                                Opacity="0.8"
                                Width="120"
                                Height="4" />
                        <TextBlock x:Name="UserRealNameStatus"
                                   Text="我是擎天柱" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Center">

                    <StackPanel HorizontalAlignment="Left" Orientation="Vertical" Margin="5,0,0,0">

                        <TextBlock Text="剩余积分" />

                        <Border CornerRadius="2,2,2,2"
                                Background="{DynamicResource ThemeColor}"
                                Opacity="0.8"
                                Width="120"
                                Height="4" />

                        <TextBlock x:Name="UserPointsRemaining"
                                   Text="我是擎天柱" />
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center" Orientation="Vertical" Margin="15,0,0,0">
                        <TextBlock Text="隧道限制" />

                        <Border CornerRadius="2,2,2,2"
                                Background="{DynamicResource ThemeColor}"
                                Opacity="0.8"
                                Width="120"
                                Height="4" />

                        <TextBlock x:Name="UserTunnelRestrictions"
                                   Text="我是擎天柱" />
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Right" Orientation="Vertical" Margin="15,0,0,0">
                        <TextBlock Text="带宽限制" />
                        <Border CornerRadius="2,2,2,2"
                                Background="{DynamicResource ThemeColor}"
                                Opacity="0.8"
                                Width="120"
                                Height="4" />
                        <TextBlock x:Name="UserBandwidthThrottling"
                                   Text="我是擎天柱" />
                    </StackPanel>

                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0,0,15,0">

                <Ellipse Margin="10,5,10,0"
                         Height="150" Width="150"
                         HorizontalAlignment="Center">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="UserImage"
                                    Stretch="UniformToFill" />
                    </Ellipse.Fill>
                </Ellipse>

                <TextBlock x:Name="UserTextBlock"
                           FontStyle="Italic"
                           FontSize="20" Text="Qusay" />

                <styles:CornerButton x:Name="Token"
                                     IsSelected="True"
                                     CornerRadius="4"
                                     Click="TokenClick"
                                     Height="35"
                                     FontFamily="Microsoft YaHei"
                                     Content="点击查看Token" />
            </StackPanel>
        </Grid>
    </Border>
</Page>
<Page x:Class="CAT.Pages.ChmlFrpPages.ChmlFrpLoginedPages.TmaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:styles="clr-namespace:CAT.Styles">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Border Margin="5"
                    Background="{DynamicResource WhiteColorLight}"
                    Opacity="0.8"
                    CornerRadius="10">
                <Grid>
                    <TextBlock FontSize="20"
                               FontWeight="Bold"
                               Text="隧道列表"
                               Margin="15"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" />

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                Margin="0,0,0,10">
                        <styles:CornerButton x:Name="BtnPrevious"
                                             CornerRadius="3"
                                             Content="上一页"
                                             Click="btnPrevious_Click" />
                        <styles:CornerButton x:Name="BtnNext"
                                             Margin="5,0,0,0"
                                             CornerRadius="3"
                                             Content="下一页"
                                             Click="btnNext_Click" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">

                        <Button Margin="0,0,5,0"
                                BorderBrush="{DynamicResource ThemeColor}"
                                Style="{StaticResource IconButtonsStyletwo}"
                                Content="{DynamicResource Add}"
                                Width="40" Height="40"
                                Click="btnAdd_Click" />

                        <Button Margin="0,0,25,0"
                                BorderBrush="{DynamicResource ThemeColor}"
                                Style="{StaticResource IconButtonsStyletwo}"
                                Content="{DynamicResource Refresh}"
                                Width="40" Height="40"
                                Click="btnRefresh_Click" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="MainGrid" Margin="5" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Page>
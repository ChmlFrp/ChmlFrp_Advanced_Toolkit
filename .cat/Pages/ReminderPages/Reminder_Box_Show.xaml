<Page x:Class="CPL.Pages.ReminderPages.ReminderBoxShow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Border x:Name="RemindersBorder"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="Transparent"
                CornerRadius="0,5,5,0"
                Opacity="0.8"
                Margin="0,0,0,45">
            <TextBox FontSize="15"
                     Margin="10,2,10,5"
                     BorderThickness="0"
                     x:Name="RemidingTextBlock"
                     Background="Transparent"
                     Foreground="White"
                     Text="我是擎天柱"
                     VerticalAlignment="Center"
                     IsReadOnly="True"
                     IsHitTestVisible="False"
                     FontFamily="Segoe UI" />
        </Border>
    </Grid>
</Page>